@model IEnumerable<Gift4U.Models.Contact>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

     @*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                שם פרטי
            </th>
            <th>
                שם משפחה
            </th>
            <th>
                טלפון
            </th>
            <th>
                דואר אלקטרוני
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td style="color:deeppink" >
                    <a style="color:deeppink" >@Html.DisplayFor(modelItem => item.Email)</a>
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                    <a style="color:deeppink"  asp-action="Details" asp-route-id="@item.Id">לפרטים</a> |
                    <a style="color:deeppink"  asp-action="Delete" asp-route-id="@item.Id">מחק</a>
                </td>
            </tr>
        }
    </tbody>
</table>
