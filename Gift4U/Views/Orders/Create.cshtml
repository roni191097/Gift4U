@model Gift4U.Models.Order

@{
    ViewData["Title"] = "Create";
}
<div text-align: center;>
    <h1>Create</h1>

    <h4>איזה כיף שבחרת בנו למתנה!</h4>
    <h4>כמה פרטים קטנים והכל מוכן...</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Total" class="control-label">כמה לפנק?</label>
                    <input asp-for="Total" class="form-control" />
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GiftTo" class="control-label">למי?</label>
                    <input asp-for="GiftTo" class="form-control" />
                    <span asp-validation-for="GiftTo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bless" class="control-label">כמה מילים שכיף לכתוב</label>
                    <input asp-for="Bless" class="form-control" />
                    <span asp-validation-for="Bless" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label">תאריך</label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ToDate" class="control-label">תאריך תוקף</label>
                    <input asp-for="ToDate" class="form-control" />
                    <span asp-validation-for="ToDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="שלח את המתנה שלי :)" class="btn" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Css
{
    <link rel="stylesheet" href="~/css/createOrder.css" />
}
