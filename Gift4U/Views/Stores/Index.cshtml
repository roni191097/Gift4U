@model IEnumerable<Gift4U.Models.Stores>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<div dir="rtl" class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                         
                            @foreach (var item1 in item.StoreSales)
                            {
                              <button for="SaleDe" onclick="showSale('@item1.Sale.Name');">
                                 @item1.Sale.Name
                              </button>
                             }
                    
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <button class="btn">קנו אצלי מתנה!</button>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts{
    <script>
        function showSale(message) {
            alert(message);
        }
    </script>
}

@section Css
{
    <link rel="stylesheet" href="~/css/stores.css" />
}
