@model Gift4U.Models.StoreSale

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>מבצעים</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StoreID" class="control-label">רשימת מבצעים</label>
                <select asp-for="StoreID" class ="form-control" asp-items="ViewBag.StoreID"></select>
            </div>
            <div class="form-group">
                <label asp-for="SaleId" class="control-label">רשימת חנויות</label>
                <select asp-for="SaleId" class ="form-control" asp-items="ViewBag.SaleId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color:deeppink" asp-action="Index">חזרה לרשימת המבצעים</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
